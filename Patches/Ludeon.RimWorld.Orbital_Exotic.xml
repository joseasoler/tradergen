<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Very cheap and very expensive bionics are less common. Ultratech bionics are unfrequent. -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators/li[@Class="StockGenerator_Tag" and
			tradeTag="TechHediff"]
		</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>
						/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators/li[@Class="StockGenerator_Tag" and
						tradeTag="TechHediff"]
					</xpath>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators</xpath>
					<value>
						<li Class="TG.StockGen.TechHediff">
							<minTechLevelGenerate>Industrial</minTechLevelGenerate>
							<maxTechLevelGenerate>Spacer</maxTechLevelGenerate>
							<thingDefCountRange>3~5</thingDefCountRange>
							<countRange>1</countRange>
						</li>
						<li Class="TG.StockGen.TechHediff">
							<minTechLevelGenerate>Ultra</minTechLevelGenerate>
							<maxTechLevelGenerate>Ultra</maxTechLevelGenerate>
							<thingDefCountRange>-1~1</thingDefCountRange>
							<countRange>1</countRange>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	<!-- Can have any industrial or spacer joy building in stock instead of just televisions.  -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators/li[@Class="StockGenerator_Tag" and
			tradeTag="Television"]
		</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>
						/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators/li[@Class="StockGenerator_Tag" and
						tradeTag="Television"]
					</xpath>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TraderKindDef[defName="Orbital_Exotic"]/stockGenerators</xpath>
					<value>
						<li Class="TG.StockGen.BuildingsJoy">
							<minTechLevelGenerate>Industrial</minTechLevelGenerate>
							<maxTechLevelGenerate>Spacer</maxTechLevelGenerate>
							<thingDefCountRange>2~4</thingDefCountRange>
							<countRange>1</countRange>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
