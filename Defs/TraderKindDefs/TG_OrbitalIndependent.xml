<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Small ships have less stock, but ships carrying rarer stock are more frequent. -->
	<TraderKindDef>
		<defName>TG_OrbitalIndependentSmall</defName>
		<label>small independent ship</label>
		<orbital>true</orbital>
		<requestable>false</requestable>
		<commonality>1.5</commonality>
		<modExtensions>
			<li Class="TG.TraderKind.GenExtension">
				<node>ND_OrbitalIndependentSmall</node>
			</li>
		</modExtensions>
	</TraderKindDef>
	<!-- Average stock amount and rarity. -->
	<TraderKindDef>
		<defName>TG_OrbitalIndependentMedium</defName>
		<label>medium independent ship</label>
		<orbital>true</orbital>
		<requestable>false</requestable>
		<commonality>1</commonality>
		<modExtensions>
			<li Class="TG.TraderKind.GenExtension">
				<node>ND_OrbitalIndependentMedium</node>
			</li>
		</modExtensions>
	</TraderKindDef>
	<!-- Large amount of stock, but they frequently focus on the most common stuff. -->
	<TraderKindDef>
		<defName>TG_OrbitalIndependentLarge</defName>
		<label>large independent ship</label>
		<orbital>true</orbital>
		<requestable>false</requestable>
		<commonality>0.5</commonality>
		<modExtensions>
			<li Class="TG.TraderKind.GenExtension">
				<node>ND_OrbitalIndependentLarge</node>
			</li>
		</modExtensions>
	</TraderKindDef>
	<!-- Traders with specific and rare combinations of stock. -->
	<TraderKindDef>
		<defName>TG_OrbitalIndependentUncommon</defName>
		<label>uncommon independent ship</label>
		<orbital>true</orbital>
		<requestable>false</requestable>
		<commonality>0.25</commonality>
		<modExtensions>
			<li Class="TG.TraderKind.GenExtension">
				<node>ND_OrbitalIndependentUncommon</node>
			</li>
		</modExtensions>
	</TraderKindDef>
</Defs>
